class Solution {
public:
    string longestCommonPrefix(vector<string>& strs) {
        if (strs.empty()) return "";
        
        string prefix = strs[0];  // Start with the first string as the prefix
        
        for (int i = 1; i < strs.size(); i++) {
            while (strs[i].find(prefix) != 0) {  // Check if prefix matches the start of the current string
                prefix = prefix.substr(0, prefix.length() - 1);  // If not, shorten the prefix
                if (prefix.empty()) return "";  // Return "" if no common prefix
            }
        }
        
        return prefix;
    }
};
